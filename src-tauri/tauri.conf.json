  "productName": "tauri-app-update",
  "version": "0.1.0",
  "identifier": "com.harley.tauri-app-update",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-app-update",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
